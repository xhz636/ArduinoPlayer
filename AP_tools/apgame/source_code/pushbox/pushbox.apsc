    mov vari_temp '8'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_NOT_ROAD:
    cmp vari_temp 'o'
    jne MOVE_RIGHT_NOT_TARGET
    mov vari_temp '0'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_NOT_TARGET:
    cmp vari_temp 'X'
    jne MOVE_RIGHT_NOT_OUTSIDE_BOX
    add map_x 1
    getMapFlag map_x map_y map_xy_flag
    ctd vari_temp map_xy_flag
    cmp vari_temp ' '
    jne MOVE_RIGHT_OUTSIDE_BOX_NEXT_NOT_ROAD
    mov vari_temp 'X'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    sub map_x 1
    mov vari_temp '8'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    mov vari_push_box 1
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_OUTSIDE_BOX_NEXT_NOT_ROAD:
    cmp vari_temp 'o'
    jne MOVE_RIGHT_END
    mov vari_temp '@'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    sub map_x 1
    mov vari_temp '8'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    mov vari_push_box 1
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_NOT_OUTSIDE_BOX:
    cmp vari_temp '@'
    jne MOVE_RIGHT_END
    add map_x 1    
    getMapFlag map_x map_y map_xy_flag
    ctd vari_temp map_xy_flag
    cmp vari_temp ' '
    jne MOVE_RIGHT_INSIDE_BOX_NEXT_NOT_ROAD
    mov vari_temp 'X'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    sub map_x 1
    mov vari_temp '0'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    mov vari_push_box 1
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_INSIDE_BOX_NEXT_NOT_ROAD:
    cmp vari_temp 'o'
    jne MOVE_RIGHT_END
    mov vari_temp '@'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    sub map_x 1
    mov vari_temp '0'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    mov vari_push_box 1
    jmp MOVE_RIGHT_DRAW_LAST
MOVE_RIGHT_DRAW_LAST:
    sub map_x 1
    getMapFlag map_x map_y map_xy_flag
    ctd vari_temp map_xy_flag
    cmp vari_temp '0'
    jne MOVE_RIGHT_LAST_IS_ROAD
    mov vari_temp 'o'
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    call redraw_right
    jmp MOVE_RIGHT_END
MOVE_RIGHT_LAST_IS_ROAD:
    mov vari_temp ' '
    dtc map_xy_flag vari_temp
    setMapFlag map_x map_y map_xy_flag
    call redraw_right
MOVE_RIGHT_END:
    ret
move_right endp

check_game proc
    mov map_y 0
CHECK_GAME_LOOP_Y:
    mov map_x 0
CHECK_GAME_LOOP_X:
    getMapFlag map_x map_y map_xy_flag
    ctd vari_temp map_xy_flag
    cmp vari_temp 'X'
    je CHECK_GAME_NOT_WIN
    inc map_x
    cmp map_x vari_map_x_max
    jl CHECK_GAME_LOOP_X
    inc map_y
    cmp map_y vari_map_y_max
    jl CHECK_GAME_LOOP_Y
    jmp CHECK_GAME_WIN
CHECK_GAME_NOT_WIN:
    ret
CHECK_GAME_WIN:
    mov vars_temp "win"
    showEnglish 50 48 vars_temp 255 0 0 5
    updateMap map_index
    updateSave 0 1 0
    mov vari_work WIN
    ret
check_game endp

redraw_up proc
