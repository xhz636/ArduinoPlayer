#define MENU 0
#define GAME 1
#define WIN 2
#define btnUP 9
#define btnDOWN 8
#define btnLEFT 7
#define btnRIGHT 6
#define btnA 5
#define btnB 4
#define btnSTART 3
#define btnSELECT 2

data segment
    int vari_work
    int vari_exit_flag
    int vari_temp
    int vari_map_x_max
    int vari_map_y_max
    int vari_map_block_x1
    int vari_map_block_y1
    int vari_map_block_x2
    int vari_map_block_y2
    int vari_map_block_radius
    int vari_map_left
    int vari_map_top
    int vari_people_x
    int vari_people_y
    int vari_redraw_begin_x
    int vari_redraw_begin_y
    int vari_push_box
    string vars_msg
    string vars_temp
data ends

code segment

main proc
    call init
playing:
    call button
    cmp vari_exit_flag 1
    jne playing
    exitGame
    ret
main endp

init proc
    mov map_index 1
    mov vari_work MENU
    mov vari_exit_flag 0
    getMapAmount map_amount
    mov vars_msg "请选择地图："
    showChinese 62 64 vars_msg 0 0 0 1
    call draw_map_index
    ret
init endp

button proc
    btnPress btnUP pressed
    cmp pressed 1
    jne NOT_UP
    call button_up
    jmp BUTTON_END
NOT_UP:
    btnPress btnDOWN pressed
    cmp pressed 1
    jne NOT_DOWN
    call button_down
    jmp BUTTON_END
NOT_DOWN:
    btnPress btnLEFT pressed
    cmp pressed 1
    jne NOT_LEFT
    call button_left
    jmp BUTTON_END
NOT_LEFT:
    btnPress btnRIGHT pressed
    cmp pressed 1
    jne NOT_RIGHT
    call button_right
    jmp BUTTON_END
NOT_RIGHT:
    btnPress btnA pressed
    cmp pressed 1
    jne NOT_A
    call button_a
    jmp BUTTON_END
NOT_A:
    btnPress btnB pressed
    cmp pressed 1
    jne NOT_B
    call button_b
    jmp BUTTON_END
NOT_B:
    btnPress btnSTART pressed
    cmp pressed 1
    jne NOT_START
    call button_start
    jmp BUTTON_END
NOT_START:
    btnPress btnSELECT pressed
    cmp pressed 1
    jne BUTTON_END
    call button_select
BUTTON_END:
    ret
button endp

button_up proc
    cmp vari_work MENU
    jne UP_NOT_MENU
    jmp BUTTON_UP_END
UP_NOT_MENU:
    cmp vari_work GAME
    jne BUTTON_UP_END
    call move_up
BUTTON_UP_END:
    ret
untton_up endp

button_down proc
    cmp vari_work MENU
    jne DOWN_NOT_MENU
    jmp BUTTON_DOWN_END
DOWN_NOT_MENU:
    cmp vari_work GAME
    jne BUTTON_DOWN_END
    call move_down
BUTTON_DOWN_END:
    ret
untton_down endp

button_left proc
    cmp vari_work MENU
    jne LEFT_NOT_MENU
    call map_index_sub    
    jmp BUTTON_LEFT_END
LEFT_NOT_MENU:
    cmp vari_work GAME
    jne BUTTON_LEFT_END
    call move_left
BUTTON_LEFT_END:
    ret
untton_left endp

button_right proc
    cmp vari_work MENU
    jne RIGHT_NOT_MENU
    call map_index_add
    jmp BUTTON_RIGHT_END
RIGHT_NOT_MENU:
    cmp vari_work GAME
    jne BUTTON_RIGHT_END
    call move_right
BUTTON_RIGHT_END:
    ret
untton_right endp

button_a proc
    cmp vari_work MENU
    jne A_NOT_MENU
    call read_map_flag
    jmp BUTTON_A_END
A_NOT_MENU:
    cmp vari_work GAME
    jne BUTTON_A_END
BUTTON_A_END:
    ret
untton_a endp

button_b proc
    cmp vari_work MENU
    jne B_NOT_MENU
