    jmp BUTTON_B_END
B_NOT_MENU:
    cmp vari_work GAME
    jne B_NOT_GAME
    updateSave 0 0 1
    call exit_to_game_menu
    jmp BUTTON_B_END
B_NOT_GAME:
    cmp vari_work WIN
    jne BUTTON_B_END
    call exit_to_game_menu
BUTTON_B_END:
    ret
untton_b endp

button_start proc
    cmp vari_work MENU
    jne START_NOT_MENU
    call read_map_flag
    jmp BUTTON_START_END
START_NOT_MENU:
    cmp vari_work GAME
    jne START_NOT_GAME
